generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int                  @id @default(autoincrement())
  email       String               @unique
  password    String? // Optional for social login users
  name        String?
  provider    String? // "email", "google", "github"
  providerId  String? // External provider's user ID
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  zaps        Zap[]
  connections UserConnection[]
  resetTokens PasswordResetToken[]

  @@unique([provider, providerId])
}

// Store OAuth tokens for external services (Google, etc.)
model UserConnection {
  id           String    @id @default(uuid())
  userId       Int
  user         User      @relation(fields: [userId], references: [id])
  provider     String // "google", "notion", "trello"
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  scope        String?
  email        String? // Connected account email
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([userId, provider])
}

// Password reset tokens
model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Zap {
  id          String   @id @default(uuid())
  name        String? // User-friendly name for the zap
  description String? // Description of what the zap does
  triggerId   String
  trigger     Trigger?
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  isActive    Boolean  @default(true)
  maxRuns     Int      @default(-1) // -1 = forever, 1+ = limit
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  actions     Action[]
  ZapRuns     ZapRun[]
}

model Trigger {
  id                  String            @id @default(uuid())
  payload             Json
  zapId               String            @unique
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  availableTriggersId String
  type                AvailableTriggers @relation(fields: [availableTriggersId], references: [id])
  zap                 Zap               @relation(fields: [zapId], references: [id])
}

model Action {
  id           String           @id @default(uuid())
  zapId        String
  actionId     String
  sortingOrder Int              @default(0)
  metadata     Json
  type         AvailableActions @relation(fields: [actionId], references: [id])
  zap          Zap              @relation(fields: [zapId], references: [id])
}

model AvailableActions {
  id      String   @id @default(uuid())
  name    String   @unique
  actions Action[]
}

model AvailableTriggers {
  id       String    @id @default(uuid())
  name     String    @unique
  triggers Trigger[]
}

model ZapRun {
  id          String    @id @default(uuid())
  zapId       String
  metadata    Json
  status      String    @default("pending") // pending, running, success, failed
  error       String?
  zap         Zap       @relation(fields: [zapId], references: [id])
  createdAt   DateTime  @default(now())
  completedAt DateTime?
}
